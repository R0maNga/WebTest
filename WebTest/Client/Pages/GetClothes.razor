@page "/clothes"
@using DAL.Repositories.Interfaces


@inject IClothesRepository ClothesRepository
@inject NavigationManager NavigationManager


<h1>Clothes data</h1>


@if (clothesList == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Default Quantity</th>

        </tr>
        </thead>
        <tbody>

        @foreach (var clothes in clothesList)
        {
            <tr>
                <td>@clothes.Id</td>
                <td>@clothes.Name</td>
                <td>@clothes.DefaultQuantity</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => ShowCupboard(clothes.Id)">
                        <i class="oi oi-pencil"></i>
                    </button>
                </td>

            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <span>
            <button class="btn btn-success" @onclick="Createcupboard">Create</button>
        </span>
        <span>

        </span>


    </div>
}

@code {
    private List<DAL.Models.ForClothes.Response.GetClothes> clothesList;


    protected override async Task OnInitializedAsync()
    {
        clothesList = await ClothesRepository.GetAsync();
    }


    void ShowCupboard(Guid id)
    {
        NavigationManager.NavigateTo($"for-clothes/{id}");
    }

    void Createcupboard()
    {
        NavigationManager.NavigateTo("for-clothes");
    }

}